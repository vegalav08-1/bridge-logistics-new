{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "moduleResolution": "bundler",
    "module": "ESNext",
    "target": "ES2022",
    "jsx": "preserve",
    "paths": {
      "@yp/shared": ["../../packages/shared/index.ts"],
      "@yp/ui": ["../../packages/ui/index.ts"]
    },
    "baseUrl": ".",
    "strict": true,
    "types": ["node"],
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": ["next-env.d.ts", "src/**/*", ".next/types/**/*.ts", "../../packages/ui/**/*"],
  "exclude": ["node_modules"]
}
