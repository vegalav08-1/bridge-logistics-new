{
  "name": "yp-erp",
  "private": true,
  "version": "0.0.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "pnpm --filter @yp/web dev",
    "build": "pnpm -r build",
    "typecheck": "pnpm -r typecheck",
    "lint": "pnpm -r lint",
    "format": "prettier --write .",
    "test": "pnpm -r test",
    "prepare": "husky",
    "db:generate": "pnpm --filter @yp/db generate",
    "db:migrate": "pnpm --filter @yp/db migrate",
    "db:studio": "pnpm --filter @yp/db studio",
    "db:seed": "pnpm --filter @yp/db seed",
    "tc": "tsc -p tsconfig.json --noEmit",
    "fmt:check": "prettier -c .",
    "smoke": "node ./scripts/smoke.mjs",
    "test:unit": "vitest run -c vitest.config.ts",
    "test:unit:watch": "vitest -c vitest.config.ts",
    "db:test:up": "docker compose -f docker-compose.test.yml up -d --wait",
    "db:test:down": "docker compose -f docker-compose.test.yml down -v",
    "test:int": "vitest run -c vitest.int.config.ts",
    "e2e:install": "playwright install --with-deps",
    "e2e": "playwright test",
    "e2e:ui": "playwright test --ui",
    "perf": "k6 run tests/perf/scenario-chat.js",
    "sec:deps": "npx osv-scanner -r . || true",
    "sec:code": "semgrep --config tests/security/semgrep.yml --error --strict || true",
    "test:prop": "vitest run -c vitest.config.ts -t \"prop:\"",
    "mut": "stryker run",
    "qa:quick": "pnpm tc && pnpm lint && pnpm test:unit",
    "qa:full": "pnpm fmt:check && pnpm tc && pnpm lint && pnpm db:test:up && pnpm test:unit && pnpm test:int && pnpm e2e:install && pnpm e2e && pnpm perf && pnpm sec:deps && pnpm sec:code && pnpm db:test:down && node ./scripts/qa-report.mjs",
    "security:check": "pnpm sec:deps && pnpm sec:code",
    "security:fix": "pnpm audit --fix",
    "deps:update": "pnpm update --latest",
    "deps:check": "pnpm outdated",
    "clean": "pnpm -r exec rm -rf node_modules && pnpm -r exec rm -rf .next && pnpm -r exec rm -rf dist",
    "fresh": "pnpm clean && pnpm install",
    "ci": "pnpm tc && pnpm lint && pnpm test:unit && pnpm build"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.10.0",
    "@playwright/test": "^1.40.0",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.5.0",
    "@types/node": "^20.14.12",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "@vitest/coverage-v8": "^1.0.0",
    "autoprefixer": "^10.4.20",
    "cross-env": "^7.0.3",
    "dotenv": "^16.4.5",
    "eslint": "^9.10.0",
    "eslint-config-next": "^14.2.6",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-unused-imports": "^4.1.0",
    "fast-check": "^3.12.0",
    "husky": "^9.1.6",
    "jsdom": "^23.0.0",
    "lint-staged": "^15.2.9",
    "node-fetch": "^3.3.2",
    "postcss": "^8.4.47",
    "prettier": "^3.3.3",
    "supertest": "^6.3.0",
    "tailwindcss": "^3.4.10",
    "ts-node": "^10.9.0",
    "typescript": "^5.6.2",
    "vitest": "^1.0.0"
  },
  "lint-staged": {
    "*.{ts,tsx,js,json,css,md}": [
      "prettier --write"
    ],
    "*.{ts,tsx,js}": [
      "eslint --fix"
    ]
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.901.0",
    "@aws-sdk/s3-request-presigner": "^3.901.0",
    "@types/cors": "^2.8.19",
    "cors": "^2.8.5",
    "pdf-lib": "^1.17.1"
  }
}
