# Bridge Logistics Environment Variables
# Copy this file to .env.local and fill in your values

# Database
DATABASE_URL="postgresql://postgres:password@localhost:5432/bridge_logistics"

# JWT Authentication
JWT_SECRET="your-super-secret-jwt-key-here-change-in-production"
NEXTAUTH_SECRET="your-nextauth-secret-here"
NEXTAUTH_URL="http://localhost:3000"

# Application
NODE_ENV="development"
NEXT_PUBLIC_BASE_URL="http://localhost:3000"
NEXT_PUBLIC_WS_URL="ws://localhost:3001"

# User Testing (Development only)
NEXT_PUBLIC_USER_ID="user-1"
NEXT_PUBLIC_USER_ROLE="SUPER_ADMIN"

# MinIO/S3 Storage
MINIO_ENDPOINT="localhost"
MINIO_PORT="9000"
MINIO_ACCESS_KEY="minioadmin"
MINIO_SECRET_KEY="minioadmin123"
MINIO_BUCKET="bridge-files"
MINIO_USE_SSL="false"

# Redis Cache
REDIS_URL="redis://localhost:6379"

# Email (Optional)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"

# Monitoring & Analytics
SENTRY_DSN=""
ANALYTICS_ID=""

# Security
CORS_ORIGIN="http://localhost:3000"
RATE_LIMIT_MAX="100"
RATE_LIMIT_WINDOW="900000"

# Feature Flags
NEXT_PUBLIC_FEATURE_CHAT_V2="true"
NEXT_PUBLIC_FEATURE_NOTIFICATIONS_V2="true"
NEXT_PUBLIC_FEATURE_FILES_V2="true"
NEXT_PUBLIC_FEATURE_DOCS_V2="true"
NEXT_PUBLIC_FEATURE_FSM_V2="true"
NEXT_PUBLIC_FEATURE_PWA="true"

# Development
DEBUG="bridge:*"
LOG_LEVEL="info"
